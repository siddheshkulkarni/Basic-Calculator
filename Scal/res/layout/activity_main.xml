<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.scal.MainActivity" >

     <EditText
        android:id="@+id/answer"
        android:layout_width="fill_parent"
        android:gravity="right"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="textEnd"
         android:background="#484848"
        android:textColor="#FFFFFF"
        android:ems="10" />

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="54dp"
        android:background="#484848"
        android:textColor="#FFFFFF"
        android:text="1" />

    <Button
        android:id="@+id/button4"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_marginLeft="15dp"
        android:background="#484848"
        android:textColor="#FFFFFF"
        android:text="4" />

    <Button
        android:id="@+id/button5"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="29dp"
        android:background="#484848"
        android:textColor="#FFFFFF"
        android:text="5" />

    <Button
        android:id="@+id/button9"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button5"
        android:layout_below="@+id/button5"
        android:layout_marginTop="26dp"
        android:background="#484848"
        android:textColor="#FFFFFF"
        android:text="9" />

    <Button
        android:id="@+id/buttonadd"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button9"
        android:layout_below="@+id/button9"
        android:layout_marginTop="28dp"
        android:background="#484848"
        android:textColor="#FFFFFF"
        android:text="+" />

    <Button
        android:id="@+id/button6"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button9"
        android:layout_toLeftOf="@+id/button3"
        android:background="#484848"
        android:textColor="#FFFFFF"
        android:text="6" />

    <Button
        android:id="@+id/button0"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonadd"
        android:layout_alignLeft="@+id/button6"
        android:background="#484848"
        android:textColor="#FFFFFF"
        android:text="0" />

    <Button
        android:id="@+id/button7"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignLeft="@+id/button3"
        android:background="#484848"
        android:textColor="#FFFFFF"
        android:text="7" />

    <Button
        android:id="@+id/button11"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonadd"
        android:layout_alignLeft="@+id/button7"
         android:background="#484848"
        android:textColor="#FFFFFF"
        android:text="." />

    <Button
        android:id="@+id/button8"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button9"
        android:layout_alignLeft="@+id/button4"
         android:background="#484848"
        android:textColor="#FFFFFF"
        android:text="8" />

    <Button
        android:id="@+id/buttonequal"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonadd"
        android:layout_alignLeft="@+id/button8"
         android:background="#484848"
        android:textColor="#FFFFFF"
        android:text="=" />

    <Button
        android:id="@+id/buttonsub"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonadd"
        android:layout_alignBottom="@+id/buttonadd"
        android:layout_alignLeft="@+id/button0"
        android:background="#484848"
        android:textColor="#FFFFFF"
        android:text="-" />

    <Button
        android:id="@+id/buttonmul"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonsub"
        android:layout_alignBottom="@+id/buttonsub"
        android:layout_toLeftOf="@+id/button4"
        android:background="#484848"
        android:textColor="#FFFFFF"
        android:text="*" />

    <Button
        android:id="@+id/buttondiv"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonmul"
        android:layout_alignBottom="@+id/buttonmul"
        android:layout_alignLeft="@+id/buttonequal"
        android:background="#484848"
        android:textColor="#FFFFFF"
        android:text="/" />

    <Button
        android:id="@+id/button3"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/button2"
        android:background="#484848"
        android:textColor="#FFFFFF"
        android:text="3" />

    <Button
        android:id="@+id/button2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/button1"
        android:background="#484848"
        android:textColor="#FFFFFF"
        android:text="2" />

    <Button
        android:id="@+id/buttoncancel"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button5"
        android:layout_toRightOf="@+id/button4"
        android:layout_marginLeft="16dp"
        android:background="#484848"
        android:textColor="#FFFFFF"
        android:text="C" />

</RelativeLayout>
